<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.ButtonNumber" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:onClick">onNumberClick</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="Base.ButtonIphoneOperation" parent="Base.ButtonNumber">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.ButtonOperation" parent="Base.ButtonNumber">
        <item name="android:onClick">onOperationClick</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

</resources>